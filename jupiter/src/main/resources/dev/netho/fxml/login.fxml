<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="dev.netho.jupiter.controller.Login"
          stylesheets="@../style/style-default.css"
          prefHeight="400.0" prefWidth="600.0" alignment="CENTER" hgap="10" vgap="10">

    <padding>
        <Insets topRightBottomLeft="8.0"/>
    </padding>

    <Text text="Login page"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="E-mail:" labelFor="$tfEmail" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="tfEmail" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Senha:" labelFor="$tfPassword" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="tfPassword" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="Login" styleClass="btn-primary" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

</GridPane>
